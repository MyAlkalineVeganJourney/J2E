    const ageNum = parseInt(age);
    if (!age || ageNum < 13 || ageNum > 120) return t('validation.age_range', 'Age must be 13-120');
    
    if (!currentState) return t('validation.current_state_required', 'Select current state');
    if (!goals) return t('validation.goals_required', 'Select health goals');
    
    return '';
  }, [formState.data, t]);

