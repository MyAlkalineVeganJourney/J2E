        const saveResult = await saveFormData({
          ...sanitizedData,
          language: currentLanguage,
          timestamp: new Date().toISOString()
        });
        
        if (!saveResult?.success) {
          throw new Error(t('form.save_error', 'Failed to save form data'));
        }
