      if (sendEmailReport) {
        await sendEmailReport(sanitizedData.email, {
          name: sanitizedData.name,
          language: currentLanguage
        });
      }
      
      setFormState(prev => ({
        ...prev,
        submitted: true,
        isSubmitting: false,
        data: { name: '', email: '', age: '', currentState: '', goals: '' }
      }));
      
